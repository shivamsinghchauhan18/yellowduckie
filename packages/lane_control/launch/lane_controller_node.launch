<launch>
	<arg name="veh"/>
	<arg name="param_file_name" default="default" doc="Specify a param file. ex:megaman"/>
	<arg name="param_file_name_wheels_driver_node" default="default" doc="Specify a param file. ex:megaman"/>
	<arg name="pkg_name" default="lane_control" doc="name of the package"/>
	<arg name="node_name" default="lane_controller_node" doc="name of the node"/>

        <group ns="$(arg veh)">
	    <node  pkg="$(arg pkg_name)" type="$(arg node_name).py" name="$(arg node_name)" output="screen">
	        <rosparam command="load" file="$(find lane_control)/config/$(arg node_name)/$(arg param_file_name).yaml"/>
	        <param name="veh_name" value="$(arg veh)" />
				<!-- Inputs -->
				<remap from="lane_controller_node/lane_pose" to="lane_filter_node/lane_pose"/>
				<remap from="lane_controller_node/stop_line_reading" to="stop_line_filter_node/stop_line_reading"/>
				<!-- Use executed feedback from wheels driver (not the command topic) -->
				<remap from="lane_controller_node/wheels_cmd" to="wheels_driver_node/wheels_cmd_executed"/>
				<!-- Parameterized cross-veh topics -->
				<remap from="lane_controller_node/vehicle_centers" to="/$(arg veh)/vehicle_detection_node/centers"/>
				<remap from="lane_controller_node/apriltag_detections" to="/$(arg veh)/apriltag_detector_node/detections"/>
	    </node>
	</group>

</launch>
